@model IEnumerable<ShoppingApplication.Models.Product>

@{
    ViewBag.Title = "Shop";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
</head>
<body style="background-color: rgba(255, 182, 193, 0.2)">
    <h2>Product List</h2>

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <form method="post" action="@Url.Action("AddToCart", "Products")">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                    @*@Html.ActionLink("Add to Cart", "AddToCart", new { productId = product.Id }, new { @class = "btn btn-primary btn-sm" })*@
                </td>
            </tr>
        }
    </table>
    <br />
    <a href="@Url.Action("Cart", "Products")" class="btn btn-success"><i class="fas fa-shopping-cart"></i></a>
</body>